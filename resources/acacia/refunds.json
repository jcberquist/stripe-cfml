{
    "methods": {
        "cancel": {
            "httpMethod": "post",
            "path": "/v1/refunds/{refund_id}/cancel"
        },
        "create": {
            "arguments": {
                "amount": "currency",
                "refund_application_fee": "boolean",
                "reverse_transfer": "boolean"
            },
            "httpMethod": "post",
            "path": "/v1/refunds"
        },
        "list": {
            "arguments": {
                "created": "datefilter"
            },
            "path": "/v1/refunds"
        },
        "retrieve": {
            "path": "/v1/refunds/{refund_id}"
        },
        "update": {
            "httpMethod": "post",
            "path": "/v1/refunds/{refund_id}"
        }
    }
}
