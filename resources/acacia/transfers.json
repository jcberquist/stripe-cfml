{
    "methods": {
        "create": {
            "arguments": {
                "amount": "currency",
                "currency": "iso_currency_code"
            },
            "httpMethod": "post",
            "path": "/v1/transfers"
        },
        "createReversal": {
            "arguments": {
                "amount": "currency",
                "refund_application_fee": "boolean"
            },
            "httpMethod": "post",
            "path": "/v1/transfers/{transfer_id}/reversals"
        },
        "list": {
            "arguments": {
                "created": "datefilter"
            },
            "path": "/v1/transfers"
        },
        "listReversals": {
            "path": "/v1/transfers/{transfer_id}/reversals"
        },
        "retrieve": {
            "path": "/v1/transfers/{transfer_id}"
        },
        "retrieveReversal": {
            "path": "/v1/transfers/{transfer_id}/reversals/{reversal_id}"
        },
        "update": {
            "httpMethod": "post",
            "path": "/v1/transfers/{transfer_id}"
        },
        "updateReversal": {
            "httpMethod": "post",
            "path": "/v1/transfers/{transfer_id}/reversals/{reversal_id}"
        }
    }
}
