            "arguments": {
                "shipping": {
                    "require_signature": "boolean"
                },
                "spending_controls": {
                    "spending_limits": {
                        "amount": "currency"
                    }
                }
            },
            "httpMethod": "post",
            "path": "/v1/issuing/cards/{card_id}"
        }
    }
